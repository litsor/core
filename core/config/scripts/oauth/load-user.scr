# LoadUser

/authorization ~ /"headers/x-authorization"
/authorization ~ /headers/authorization
/authorization ~ ""

/token = /authorization regexp "^Bearer ([^.]+)\\.([^.]+)\\.([^.]+)$"

/user = null
/ = /token then {{
  /signature = base64urlFromBase64 signature /token/1 + "." + /token/2
  / = (/signature == /token/3) then {{
    /payload = fromJson fromBase64url /token/2
    / = (/payload/exp > timestamp date {}) then {{
      /revoked = query {
        list: listOauthLogout(filters: {
          aud: /payload/aud,
          sub: /payload/sub,
          date_lte: /payload/iat
        }) {
          count
        }
      } pick /list/count
      / = (!/revoked) then {{
        /user = {
          id: /payload/sub,
          client: {
            id: /payload/aud
          },
          token: {
            expires: /payload/exp,
            scope: /payload/scope
          }
        }
      }}
    }}
  }}
}}

/ = /user
